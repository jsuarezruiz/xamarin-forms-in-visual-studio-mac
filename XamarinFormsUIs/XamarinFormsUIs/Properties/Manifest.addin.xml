<?xml version="1.0" encoding="UTF-8"?>
<ExtensionModel>
    <Extension path="/MonoDevelop/Ide/StartupHandlers">
        <Class class="XamarinFormsUIs.Commands.InitXamarinFormsCommand"/>
    </Extension>

    <Extension path="/MonoDevelop/Ide/Commands">
        <Command _label="Show Xamarin.Forms User Interface" 
                 id="XamarinFormsUIs.Commands.ShowWindowCommand"
                 description="Shows a Xamarin.Forms powered UI."
                 defaultHandler="XamarinFormsUIs.Commands.ShowWindowCommand"/>
    </Extension>
    
    <Extension path = "/MonoDevelop/Ide/MainMenu/Tools">
        <CommandItem id="XamarinFormsUIs.Commands.ShowWindowCommand"/>
    </Extension>
    
</ExtensionModel>